{
    "name": "devvoh/sso-php",
    "type": "library",
    "description": "sso-php is a package containing both the Server and Client parts of this minimal SSO system",
    "keywords": ["library", "token", "auth", "api", "server", "client", "minimalist"],
    "license": "MIT",
    "authors": [
        {
            "name": "Robin de Graaf",
            "email": "hello@devvoh.com",
            "homepage": "https://devvoh.com"
        }
    ],
    "require": {
        "php": ">=7.1",
        "ext-curl": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ralouphie/getallheaders": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.0"
    },
    "autoload": {
        "psr-4": {
            "SsoPhp\\": "src/",
            "SsoPhp\\Tests\\": "tests"
        }
    }
}
